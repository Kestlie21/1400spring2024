using System;

class Program
{
    static void Main(string[] args)
    {
        Console.Write("Enter the number of levels for the pyramid: ");
        int numLevels = Convert.ToInt32(Console.ReadLine());

        for (int i = 1; i <= numLevels; i++)
        {
            // Print spaces before the numbers
            for (int j = 1; j <= numLevels - i; j++)
            {
                Console.Write(" ");
            }

            // Print the numbers
            for (int k = 1; k <= i; k++)
            {
                Console.Write(i + " ");
            }

            Console.WriteLine()();
        }
    }
}
